{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fitness Tracker Color Scheme - Slate Gray & Lime Green",
  "description": "Professional color configuration optimized for glassmorphism with excellent readability",
  "version": "2.0.0",
  
  "colors": {
    "primary": {
      "50": "#f8fafc",
